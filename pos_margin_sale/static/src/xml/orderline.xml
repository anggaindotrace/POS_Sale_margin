<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">

        <xpath expr="//li[hasclass('orderline')]"  position="attributes">            
            <attribute name="t-attf-class">
                {{props.line.get_unit_display_price() &lt; props.line.get_minimum_sale_price() ? 'below-minimum-price': ''}}
            </attribute>
        </xpath>
        <xpath expr="//li[hasclass('orderline')]/ul[hasclass('info-list')]" position="inside">
            <t t-if="props.line.get_unit_display_price() &lt; props.line.get_minimum_sale_price()">
                <li class="info">
                    Price of this product is less than minimum sale price <t t-esc="env.pos.format_currency(props.line.get_minimum_sale_price())"/>
                </li>
            </t>
        </xpath>
    </t>

</templates>
