<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_pos_margin_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_margin_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="blocking_transaction_pos"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="blocking_transaction_pos" string="Blocking Transaction POS"/>
                        <div class="text-muted">
                            Warning price less than minimum sale price will blocking the transaction.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_sale_margin_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale_margin_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='quotation_order_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="blocking_transaction_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="blocking_transaction_order" string="Blocking Transaction Order"/>
                        <div class="text-muted">
                            Warning price less than minimum sale price will blocking the transaction.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
